@using Vidbit.Models;

@model IEnumerable<Movie>

<h2>Movies</h2>

@Html.ActionLink("NEW MOVIE", "New", "Customers", new { @class = "btn btn-primary"})

@if (Model == null)
{
    <p>Sorry, there is no available movies in here.</p>
}

<br />
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>      
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
